<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css" type="text/css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <div class="container">
            <h1>{{ brand.getBrandName }}</h1>

            {% if stores is not empty %}
                <h3>Here is a list of stores that carry that brand:</h3>
                <ul>
                {% for store in stores %}
                        <li>{{ store.getStoreName }}</li>
                {% endfor %}
                </ul>
            {% endif %}

            {% if stores is empty %}
                <h3>No stores carry that brand.</h3>
            {% endif %}

            <form action="/add_store_to_brand" method="post">
                <input id="brand_id" name="brand_id" type="hidden" value="{{ brand.getId }}">

                <label for="store_id">Select a Store</label>
                <select id="store_id" name="store_id" type="text">
                    {% for store in all_stores %}
                        <option value="{{ store.getId}}">{{ store.getStoreName }}</option>
                    {% endfor %}
                </select>
                <button class="btn btn-danger" type="submit">Add store</button>
            </form>
        <a href="/">Home</a>
        </div>
    </body>
</html>
